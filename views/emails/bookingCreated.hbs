    <table class="module" role="module" data-type="text" border="0" cellpadding="0" cellspacing="0" width="100%" style="table-layout: fixed;">
        <tr>
            <td style="padding:30px 45px 30px 45px;line-height:22px;text-align:inherit;" height="100%" valign="top" bgcolor="">
                <table>
                    <tbody>
                        <tr>
                            <td class="" style="font-size: 16px; font-weight: 700;">Booking information</td>
                        </tr>
                        <tr>
                            <td>
                                <table border="0" cellPadding="0" cellSpacing="5" style="padding: 0 0 0 10px;">
                                    <tbody>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Booking code</td>
                                            <td class="">{{booking.id}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Check-in date</td>
                                            <td class="">{{booking.strings.checkInDate}} 15:00</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Check-out date</td>
                                            <td class="">{{booking.strings.checkOutDate}} 11:00</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Number of guests</td>
                                            <td class="">{{booking.strings.guests}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; margin-left: 5px;">Price</td>
                                            <td class="">{{booking.strings.totalPrice}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <table>
                    <tbody>
                        <tr>
                            <td class="inner-td" style="font-size: 16px; font-weight: 700;">Room types</td>
                        </tr>
                        <tr>
                            <td>
                                <table border="0" cellPadding="0" cellSpacing="5" style="padding: 0 0 0 10px;">
                                    <tbody>
                                        {{#each booking.roomRequests}}
                                        <tr>
                                            <td class="inner-td"><img src="https://aegean-blue-hotel.fly.dev{{this.roomType.coverPhoto.source}}" alt="{{this.roomType.coverPhoto.description}}" width="170"></td>
                                            <td class="inner-td">{{this.roomType.name}} <span style="white-space: nowrap;">(x{{this.quantity}})</span></td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <table>
                    <tbody>
                        <tr>
                            <td class="inner-td" style="font-size: 16px; font-weight: 700;">Guest information</td>
                        </tr>
                        <tr>
                            <td>
                                <table border="0" cellPadding="0" cellSpacing="5" style="padding: 0 0 0 10px;">
                                    <tbody>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">First name</td>
                                            <td class="">{{booking.guest.firstName}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Last name</td>
                                            <td class="">{{booking.guest.lastName}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Email</td>
                                            <td class="">{{booking.guest.email}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Phone number</td>
                                            <td class="">{{booking.guest.phoneNumber}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; margin-left: 5px;">Travelling for work</td>
                                            <td class="">{{booking.strings.guestTravelsForWork.description}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <table>
                    <tbody>
                        <tr>
                            <td class="inner-td" style="font-size: 16px; font-weight: 700;">Billing address</td>
                        </tr>
                        <tr>
                            <td>
                                <table border="0" cellPadding="0" cellSpacing="5" style="padding: 0 0 0 10px;">
                                    <tbody>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Country</td>
                                            <td class="">{{#if booking.guest.address.country}}{{booking.guest.address.country}}{{/if}}{{#unless booking.guest.address.country}}Not specified{{/unless}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">City</td>
                                            <td class="">{{#if booking.guest.address.city}}{{booking.guest.address.city}}{{/if}}{{#unless booking.guest.address.city}}Not specified{{/unless}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Street</td>
                                            <td class="">{{#if booking.guest.address.street}}{{booking.guest.address.street}}{{/if}}{{#unless booking.guest.address.street}}Not specified{{/unless}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Street no.</td>
                                            <td class="">{{#if booking.guest.address.streetNo}}{{booking.guest.address.streetNo}}{{/if}}{{#unless booking.guest.address.streetNo}}Not specified{{/unless}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; margin-left: 5px;">Postal code</td>
                                            <td class="">{{#if booking.guest.address.postalCode}}{{booking.guest.address.postalCode}}{{/if}}{{#unless booking.guest.address.postalCode}}Not specified{{/unless}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <table>
                    <tbody>
                        <tr>
                            <td class="inner-td" style="font-size: 16px; font-weight: 700;">Extra options</td>
                        </tr>
                        <tr>
                            <td>
                                <table border="0" cellPadding="0" cellSpacing="5" style="padding: 0 0 0 10px;">
                                    <tbody>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Breakfast included</td>
                                            <td class="">{{booking.strings.breakfastIncluded.description}}</td>
                                        </tr>
                                        <tr>
                                            <td class="" style="color: #6C757D; padding-right: 10px;">Free cancellation included</td>
                                            <td class="">{{booking.strings.freeCancellationAllowed.description}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <table>
                    <tbody>
                        <tr>
                            <td class="inner-td" style="font-size: 16px; font-weight: 700;">Notes</td>
                        </tr>
                        <tr>
                            <td>
                                <ul>
                                    <li style="font-size: 16px; color:#333333;">You can manage your booking <a href="https://aegean-blue-hotel.fly.dev/manageBooking/{{booking.id}}" class="link-primary">here</a>.</li>
                                    <li style="font-size: 16px; color:#333333;">You may change your booking dates once without extra fee.</li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <div style="text-align: center;"><span style="font-size: 16px; color:#333333;">Best regards,<br>The Aegean Blue Hotel Team<br>&#128153;</span></div>
            </td>
        </tr>
    </table>
  
    
