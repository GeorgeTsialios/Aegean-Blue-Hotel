    <table class="module" role="module" data-type="text" border="0" cellpadding="0" cellspacing="0" width="100%" style="table-layout: fixed;">
      <tr>
        <td style="padding:45px 45px 0 45px;line-height:22px;text-align:inherit;"
            height="100%"
            valign="top"
            bgcolor="">
            <div style="text-align: center;"><img src="https://aegean-blue-hotel.fly.dev/assets/check2-circle.png"></div>
        </td>
      </tr>
      <tr>
        <td style="padding:5px 45px 45px 45px;line-height:22px;text-align:inherit;"
