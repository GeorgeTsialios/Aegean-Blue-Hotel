                </table>
            </div>
            <button type="button" class="btn btn-dark position-fixed bottom-0 end-0 mb-4 me-4 rounded-5 d-flex align-items-center shadow" id="offcanvasButton" data-bs-toggle="offcanvas" data-bs-target="#offcanvasCart">
