                                                {{/each}}
                                                <input type="hidden" name="breakfastIncluded" id="BreakfastIncludedForm" value="false">
                                                <input type="hidden" name="freeCancellationIncluded" id="FreeCanellationIncludedForm" value="false">
                                                <input type="hidden" name="originalPrice" id="originalPriceForm" value="0">
                                                <input type="hidden" name="discount" id="discountForm" value="0">
                                                <input type="hidden" name="totalPrice" id="totalPriceForm" value="0">
